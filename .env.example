# CARF Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Phase 1 MVP
# =============================================================================

# LLM Provider: "deepseek" (recommended for cost) or "openai"
LLM_PROVIDER=deepseek

# DeepSeek API Key (recommended - cost-efficient)
DEEPSEEK_API_KEY=sk-...

# OpenAI API Key (alternative)
# OPENAI_API_KEY=sk-...

# HumanLayer API Key (for human-in-the-loop)
HUMANLAYER_API_KEY=hl_...

# =============================================================================
# OPTIONAL - Observability
# =============================================================================

# LangSmith (tracing)
LANGSMITH_API_KEY=ls-...
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=carf-dev

# =============================================================================
# PHASE 2+ - Database Integrations
# =============================================================================

# Neo4j (Causal Graph) - Phase 3
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here
NEO4J_DATABASE=neo4j

# Redis (Short-term Memory)
# REDIS_URL=redis://localhost:6379

# PostgreSQL (Epistemic State)
# DATABASE_URL=postgresql://user:pass@localhost:5432/carf

# =============================================================================
# PHASE 3+ - Production
# =============================================================================

# Kafka (Audit Trail)
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_TOPIC=carf_decisions
# KAFKA_CLIENT_ID=carf
# KAFKA_ENABLED=false

# OPA (Guardian Policy)
# OPA_ENABLED=false
# OPA_URL=http://localhost:8181
# OPA_POLICY_PATH=/v1/data/carf/guardian/allow
# OPA_TIMEOUT_SECONDS=5

# CSL-Core (Formal Policy Verification)
# CSL_ENABLED=false
# CSL_POLICY_DIR=config/policies
# CSL_FAIL_CLOSED=true
# CSL_AUDIT_ENABLED=true

# Test mode (offline LLM stubs)
# CARF_TEST_MODE=1

# Slack (HumanLayer channel)
# SLACK_WEBHOOK_URL=

# Dataset registry (local storage)
# CARF_DATA_DIR=./var
